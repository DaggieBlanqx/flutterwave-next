{
  "name": "flutterwave-next",
  "version": "0.0.7",
  "description": "Flutterwave checkout wrapper for React/Next.js apps",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/client.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "npm run prettier && node --test",
    "prettier": "npx prettier --ignore-path .prettierignore --config prettier.config.cjs --write ."
  },
  "repository": {
    "type": "git",
    "url": "github.com/daggieblanqx/flutterwave-next"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "flutterwave",
    "payments",
    "nextjs",
    "react",
    "react19",
    "next",
    "next15",
    "checkout"
  ],
  "author": "daggieblanqx",
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
